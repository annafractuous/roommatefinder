<div class="container content-body">
  <h1>Login</h1>
  <hr>

  <%= form_tag(login_path, method: 'post') do %>
    <%= label_tag 'username', 'Username' %>
    <%= text_field_tag 'username' %>
    <%= label_tag 'password', 'Password' %>
    <%= password_field_tag 'password' %>
    <%= submit_tag "Log In" %>
  <% end %>
</div>
